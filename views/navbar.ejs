<div class="nav">
  <% if (!isAuthenticated) { %>
  <div class="title">
    <a href="/auth/login">
      <button class="nav_btn-login">Log In</button>
    </a>
    <a href="/auth/register">
      <button class="nav_btn-signup">Sign Up</button>
    </a>
  </div>
  <% } else { %>
  <div class="title">
    <li class="nav-item dropdown">
      <a
        class="nav-link dropdown-toggle name"
        href="#"
        role="button"
        data-bs-toggle="dropdown"
        aria-expanded="false"
      >
        <%= user.username || user %>
      </a>
      <ul class="dropdown-menu">
        <li>
          <a
            class="dropdown-item"
            href="/users/<%=user.username.toLowerCase() %>"
            >Profile</a
          >
        </li>
        <li>
          <a class="dropdown-item" href="/users/settings">Settings</a>
        </li>
        <li><hr class="dropdown-divider" /></li>
        <li>
          <a class="dropdown-item logout-c" href="/auth/logout">Logout</a>
        </li>
      </ul>
    </li>
  </div>
  <% } %>
</div>
