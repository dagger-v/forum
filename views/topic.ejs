<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel="stylesheet" href="/stylesheets/style.css" />

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Poppins&display=swap"
      rel="stylesheet"
    />

    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM"
      crossorigin="anonymous"
    />
  </head>
  <body>
    <%- include("navbar"); -%>
    <div class="post">
      <% list_posts.forEach(topic => { %>
      <div class="post-t">
        <span class="post-topic"><%= topic.title %></span>
      </div>
      <div class="post-a">
        <span>by: <%=topic.author %></span>
        <span>| <%=topic.createdAt.toLocaleDateString("en-US", month) %> </span>
      </div>
      <%- include("userbar"); -%>
      <div class="a1">
        <div class="b1">
          <img src="/images/avatar-<%=user.avatar %>.png" alt="icon" />
          <p><%= topic.author %></p>
          <span><p class="b1-g">Jade Emperor</p></span>
        </div>
        <div class="c1">
          <div class="c1-c">
            <span><%=topic.content %></span>
          </div>
          <div class="c1-s">
            <span class="c1-sig"><%=user.signature %></span>
          </div>
        </div>
      </div>
      <% topic.posts.forEach((post) => { %>
      <div class="a1">
        <div class="b1">
          <img src="/images/avatar-<%=user.avatar %>.png" alt="icon" />
          <p><%= post.author %></p>
          <span><p class="b1-g">Jade Emperor</p></span>
        </div>
        <div class="c1">
          <div class="c1-c">
            <span><%=post.message %></span>
          </div>
          <div class="c1-s">
            <span class="c1-sig"><%=user.signature %></span>
          </div>
        </div>
      </div>
      <% }); %> <% }); %>
      <section id="qp">
        <form action="" method="POST">
          <div class="form-group">
            <label for="message"></label>
            <textarea
              class="form-control"
              id="message"
              name="message"
              rows="10"
              cols="65"
              placeholder="Write Your Message"
            ></textarea>
          </div>
          <div>
            <label for="author"></label>
            <input
              id="author"
              type="text"
              name="author"
              value="<%= user.username %>"
              hidden
            />
          </div>
          <div>
            <label for="signature"></label>
            <input
              id="signature"
              type="text"
              name="signature"
              value="<%= user.signature %>"
              hidden
            />
          </div>
          <div>
            <button type="submit" class="post-btn">Post New Message</button>
          </div>
        </form>
      </section>
    </div>
    <%- include("footer"); -%>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz"
      crossorigin="anonymous"
    ></script>
    <script src="/javascripts/app.js"></script>
  </body>
</html>
